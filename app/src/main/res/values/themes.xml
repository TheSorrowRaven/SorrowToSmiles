<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SorrowToSmiles" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/invisible</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:editTextColor">@color/text</item>
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SorrowToSmiles.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/entry_general_text</item>
        <item name="colorOnPrimary">@color/entry_general_text</item>
        <item name="colorPrimary">@color/entry_general_text</item>
        <item name="colorAccent">@color/entry_general_text</item>
        <item name="color">@color/entry_general_text</item>
        <item name="colorOnBackground">@color/entry_general_text</item>
        <item name="android:solidColor">@color/entry_general_text</item>
        <item name="android:background">@color/entry_background</item>
        <item name="android:textColor">@color/entry_general_text</item>
        <item name="android:editTextColor">@color/entry_general_text</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/entry_general_text</item>
    </style>


    <style name="TimePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/entry_general_text</item>
        <item name="colorOnPrimary">@color/entry_general_text</item>
        <item name="colorPrimary">@color/entry_general_text</item>
        <item name="colorAccent">@color/entry_general_text</item>
        <item name="color">@color/entry_general_text</item>
        <item name="colorOnBackground">@color/entry_general_text</item>
        <item name="android:solidColor">@color/entry_general_text</item>
        <item name="android:background">@color/entry_background</item>
        <item name="android:textColor">@color/entry_general_text</item>
        <item name="android:editTextColor">@color/entry_general_text</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/entry_general_text</item>
    </style>


    <style name="RadioButton">
        <item name="android:buttonTint">@color/main_general_text</item>
        <item name="android:textColor">@color/main_general_text</item>
    </style>


    <style name="entry_editText">
        <item name="android:background">@drawable/texture_rectangle_round</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/entry_background</item>
    </style>

    <style name="main_editText_withImg">
        <item name="android:background">@drawable/texture_rectangle_round</item>
        <item name="android:ems">10</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/main_focal_button_text</item>
        <item name="android:backgroundTint">@color/main_focal_button_background</item>
    </style>

    <style name="entry_button">
        <item name="android:background">@drawable/texture_rectangle_round</item>
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:textColor">@color/entry_focal_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/entry_focal_button_background</item>
    </style>
    <style name="entry_sub_button">
        <item name="android:background">@drawable/texture_rectangle_round</item>
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:textColor">@color/entry_sub_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#467C68</item>
    </style>

    <style name="img">
        <item name="android:background">@color/invisible</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="main_button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/texture_rectangle_round</item>

    </style>
    <style name="main_button_sub">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/texture_rectangle_round</item>
        <item name="backgroundTint">@color/main_sub_button_background</item>
        <item name="android:textColor">@color/main_sub_button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="warning_text">
        <item name="android:textColor">@color/warning_general_text</item>
        <item name="android:background">@color/warning_background</item>
    </style>
    <style name="warning_button_text">
        <item name="android:textColor">@color/warning_sub_button_text</item>
        <item name="android:background">@color/warning_sub_button_background</item>
        <item name="backgroundTint">@color/warning_sub_button_background</item>
    </style>
    <style name="warning_sub_button_text">
        <item name="android:textColor">@color/warning_focal_button_text</item>
        <item name="android:background">@color/warning_focal_button_background</item>
        <item name="backgroundTint">@color/warning_focal_button_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="card">
        <item name="cardBackgroundColor">@color/main_focal_button_background</item>
    </style>
    <style name="card_constraint">
        <item name="android:background">#00000000</item>
        <item name="backgroundTint">#00000000</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="card_content">
        <item name="android:textColor">@color/main_focal_button_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.SorrowToSmiles.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SorrowToSmiles.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="toolbar">
        <item name="android:textColorPrimary">@color/entry_general_text</item>
        <item name="android:textColorSecondary">@color/entry_general_text</item>
        <item name="actionMenuTextColor">@color/entry_general_text</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/entry_general_text</item>
        <item name="android:editTextColor">@color/entry_general_text</item>
        <item name="android:fontFamily">@font/lora_regular</item>
<!--        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
<!--        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

</resources>